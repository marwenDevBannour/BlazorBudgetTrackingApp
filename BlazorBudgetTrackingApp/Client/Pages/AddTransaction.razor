@page "/AddTransaction"
<h3>Add Transaction</h3>

<EditForm Model="@model" OnValidSubmit="()=>AddTransactionClick(model)">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="date">Date</label>
        <input id="date" type="date" class="form-control" @bind="model.DateTransaction" />
        <ValidationMessage For="@(() => model.DateTransaction)" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" type="text" class="form-control" @bind="model.Desription" />
        <ValidationMessage For="@(() => model.Desription)" />
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        <input id="amount" type="number" class="form-control" @bind="model.Amount" />
        <ValidationMessage For="@(() => model.Amount)" />
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select id="category" class="form-control" @bind="model.Category">
            <option value="">Select a category</option>
            <option value="Income">Income</option>
            <option value="Expense">Expense</option>
        </select>
        <ValidationMessage For="@(() => model.Category)" />
    </div>
    <button type="submit" class="btn btn-primary" >Add</button>
</EditForm>

